# Deno Environment Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=pass
# Optional alternative to DATABASE_PASSWORD:
# DATABASE_PASSWORD_FILE=/run/secrets/database_password
DATABASE_NAME=yndu

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Optional alternative to REDIS_PASSWORD:
# REDIS_PASSWORD_FILE=/run/secrets/redis_password
REDIS_USERNAME=
REDIS_DB=0

# Security
# CORS: NEVER use * in production - set specific origin
CORS_ORIGIN=http://localhost:3000

# JWT: Use strong random string, min 32 characters in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Optional alternative to JWT_SECRET:
# JWT_SECRET_FILE=/run/secrets/jwt_secret
JWT_EXPIRES_IN=24h

# bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Session timeouts (in seconds)
SESSION_TIMEOUT=600
REFRESH_TOKEN_TIMEOUT=604800

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=3600
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
