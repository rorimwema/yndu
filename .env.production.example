# ============================================
# YNDU Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to git!

# ============================================
# Database Configuration
# ============================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
# Generate a strong password: openssl rand -base64 32
DATABASE_PASSWORD=change_me_to_secure_password
DATABASE_NAME=yndu_prod

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# Generate a strong password: openssl rand -base64 32
REDIS_PASSWORD=change_me_to_secure_password

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=8000
# Your domain name
CORS_ORIGIN=https://yourdomain.com

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=change_me_to_very_long_random_string_min_64_chars
# Generate with: openssl rand -base64 32
NUXT_SESSION_PASSWORD=change_me_to_32_char_random_string

# Bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================
# Session & Rate Limiting
# ============================================
# Session timeout in seconds (10 minutes)
SESSION_TIMEOUT=600
# Refresh token timeout in seconds (7 days)
REFRESH_TOKEN_TIMEOUT=604800
# Max failed login attempts
MAX_LOGIN_ATTEMPTS=5
# Lockout duration in seconds (1 hour)
LOCKOUT_DURATION=3600
# Rate limit window in ms (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX=100

# ============================================
# Payment Provider (HashPay)
# ============================================
# Get these from your HashPay dashboard
HASHPAY_API_KEY=your_hashpay_api_key
HASHPAY_ACCOUNT_ID=your_hashpay_account_id

# ============================================
# Container Registry (for CI/CD)
# ============================================
REGISTRY=ghcr.io
IMAGE_NAME=yourusername/yndu
TAG=latest

# ============================================
# Optional: Monitoring & Logging
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@yyy.ingest.sentry.io/zzz

# Log level (debug, info, warn, error)
LOG_LEVEL=info
